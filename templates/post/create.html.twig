{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

    <div class='container mt-4'>

        <div class='row'>
            <div class='col-md-12'>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="{{path('posts')}}">Noticias</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Crear</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class='row mt-2'>
            <div class='col-md-12'>
                <h1>Noticias</h1>
            </div>
        </div>


        <div class='row mt-2'>
            <div class='col-md-12'>

                {{form_start(formulario)}}
                    <div class="card">
                        <div class="card-header">
                            Crear nueva noticia
                        </div>
                        <div class="card-body">
                            <div class='row'>
                                <div class='col-md-4'>
                                    <div class='form-group'>
                                        <label class='control-label'>TÃ­tulo</label>
                                        {{form_widget(formulario.title)}}
                                    </div>
                                </div>

                                <div class='col-md-12'>
                                    <div class='form-group'>
                                        <label class='control-label'>Contenido</label>
                                        {{form_widget(formulario.content)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class='row mt-4'>
                        <div class='form-group col-md-12'>
                            {{form_widget(formulario.save)}}
                        </div>
                    </div>
                {{form_end(formulario)}}
                
            </div>
        </div>
    </div>

{% endblock %}
